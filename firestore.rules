rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ‘¤ KullanÄ±cÄ± Profilleri - Kendi verilerini okuyabilir/yazabilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // ğŸ‘¨â€ğŸ’¼ Admin'ler tÃ¼m kullanÄ±cÄ±larÄ± gÃ¶rebilir
      allow read: if request.auth != null && 
                     request.auth.token.role == 'admin';
      
      // ğŸ‘¨â€ğŸ’¼ Admin'ler kullanÄ±cÄ± bilgilerini gÃ¼ncelleyebilir
      allow write: if request.auth != null && 
                      request.auth.token.role == 'admin';
    }
    
    // ğŸ“¦ SipariÅŸler - KullanÄ±cÄ± kendi sipariÅŸlerini gÃ¶rebilir/oluÅŸturabilir
    match /orders/{orderId} {
      // KullanÄ±cÄ± kendi sipariÅŸlerini gÃ¶rebilir
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.userId;
      
      // Yeni sipariÅŸ oluÅŸturma - userId kontrollÃ¼
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
      
      // ğŸ‘¨â€ğŸ’¼ Admin'ler tÃ¼m sipariÅŸleri gÃ¶rebilir
      allow read, write: if request.auth != null && 
                            request.auth.token.role == 'admin';
    }
    
    // ğŸ”§ ÃœrÃ¼n Katalogu - Herkes okuyabilir, sadece admin yazabilir
    match /products/{productId} {
      // Herkes Ã¼rÃ¼nleri gÃ¶rebilir (authentication gerekli)
      allow read: if request.auth != null;
      
      // ğŸ‘¨â€ğŸ’¼ Sadece admin'ler Ã¼rÃ¼n ekleyebilir/dÃ¼zenleyebilir
      allow write: if request.auth != null && 
                      request.auth.token.role == 'admin';
    }
    
    // âš™ï¸ Sistem AyarlarÄ± - Sadece admin eriÅŸimi
    match /settings/{settingId} {
      allow read, write: if request.auth != null && 
                            request.auth.token.role == 'admin';
    }
    
    // ğŸ“Š Analytics ve Loglar - Sadece admin okuyabilir
    match /analytics/{docId} {
      allow read: if request.auth != null && 
                     request.auth.token.role == 'admin';
      allow write: if request.auth != null;
    }
    
    // ğŸ“ Destek Talepleri
    match /support/{ticketId} {
      // KullanÄ±cÄ± kendi destek taleplerini gÃ¶rebilir
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.userId;
      
      // Yeni destek talebi oluÅŸturma
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
      
      // ğŸ‘¨â€ğŸ’¼ Admin'ler tÃ¼m destek taleplerini gÃ¶rebilir
      allow read, write: if request.auth != null && 
                            request.auth.token.role == 'admin';
    }
    
    // ğŸš« DiÄŸer tÃ¼m koleksiyonlar iÃ§in eriÅŸim engellendi
    match /{document=**} {
      allow read, write: if false;
    }
  }
}