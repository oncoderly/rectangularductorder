# Server Configuration
NODE_ENV=development
PORT=5050
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:5050

# Session Security
SESSION_SECRET=your-very-secure-random-string-here-min-32-chars

# Database
DATABASE_PATH=./users.db

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Twilio SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Configuration
EMAIL_SERVICE=sendgrid
# Choose: gmail, sendgrid, outlook, oauth2

# SendGrid Configuration (Recommended)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=your-verified-sender@yourdomain.com

# Gmail App Password Configuration (Alternative)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-gmail@gmail.com

# Outlook Configuration (Alternative)
# EMAIL_USER=your-outlook@outlook.com
# EMAIL_PASS=your-outlook-password
# EMAIL_FROM=your-outlook@outlook.com

# OAuth2 Gmail Configuration (Advanced)
# OAUTH2_CLIENT_ID=your-oauth2-client-id
# OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
# OAUTH2_REFRESH_TOKEN=your-oauth2-refresh-token

# Demo Mode (Development)
DEMO_MODE=false

# Production Security Headers
# Set to true in production
SECURE_COOKIES=false
TRUST_PROXY=false